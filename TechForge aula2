import java.util.Scanner;

public class variavelPedida {
    public static void main(String[] args) {
        
        Scanner buscador = new Scanner(System.in);

        System.out.println("Digite o primeiro numero: ");
        int num1 = buscador.nextInt();

        System.out.println("Digite o segundo numero: ");
        int num2 = buscador.nextInt();


        System.out.println("Digite o terceiro numero: ");


        int num3 = buscador.nextInt();


        int quantidadeNotas = 3;
        double resultado = ((double) num1/num2);

        System.out.println(num1+num2+num3);
        System.out.println(resultado);
        if (resultado > 2) {
            System.out.println("Entrou");
        } else{
            System.out.println("Nao Entrou");
        }

        String nome = "Leonardo";
        String curso = "TADS";

        System.out.println("O aluno " + nome + " do curso " + curso + " teve a media: " + ((num1+num2+num3)/quantidadeNotas));



    }
}
